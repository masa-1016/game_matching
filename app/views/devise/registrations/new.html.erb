<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true, placeholder:"例) game太郎", maxlength:"40"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", placeholder:"6文字以上の半角英数字"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"同じパスワードを入力して下さい"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :profile%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :profile, placeholder:"例) よろしくお願いします", maxlength:"40"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
